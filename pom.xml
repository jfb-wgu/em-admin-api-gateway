<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>dm-admin</artifactId>
	<packaging>jar</packaging>
	<groupId>edu.wgu</groupId>
	<name>dm-admin</name>

	<parent>
		<groupId>edu.wgu</groupId>
		<artifactId>wgu-parent-pom</artifactId>
		<version>1.0.2</version>
	</parent>

	<properties>
		<start-class>edu.wgu.dmadmin.Application</start-class>
		<wgu.soa.starter.version>1.3.19</wgu.soa.starter.version>
		<wgu.soa.autoconfigure.version>1.1.9</wgu.soa.autoconfigure.version>
		<sonar.tests>src/test/java</sonar.tests>
	</properties>

	<dependencies>
		<dependency>
			<groupId>edu.wgu</groupId>
			<artifactId>wgu-soa-starter</artifactId>
			<version>${wgu.soa.starter.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>wgu-soa-messaging</artifactId>
					<groupId>edu.wgu</groupId>
				</exclusion>
				<exclusion>
					<artifactId>wgu-soa-salesforce</artifactId>
					<groupId>edu.wgu</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>edu.wgu</groupId>
			<artifactId>wgu-soa-autoconfigure</artifactId>
			<version>${wgu.soa.autoconfigure.version}</version>
		</dependency>

		<dependency>
			<groupId>org.springframework.cloud</groupId>
			<artifactId>spring-cloud-starter-eureka</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.cloud</groupId>
			<artifactId>spring-cloud-starter-feign</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.cloud</groupId>
			<artifactId>spring-cloud-starter-security</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.security.oauth</groupId>
			<artifactId>spring-security-oauth2</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.ldap</groupId>
			<artifactId>spring-ldap-core</artifactId>
			<version>2.3.2.RELEASE</version>
		</dependency>

		<dependency>
			<groupId>org.springframework.amqp</groupId>
			<artifactId>spring-rabbit</artifactId>
			<version>2.0.1.RELEASE</version><!--$NO-MVN-MAN-VER$ -->
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-messaging</artifactId>
			<version>5.0.2.RELEASE</version><!--$NO-MVN-MAN-VER$ -->
		</dependency>

		<dependency>
			<groupId>org.springframework.amqp</groupId>
			<artifactId>spring-amqp</artifactId>
			<version>2.0.1.RELEASE</version><!--$NO-MVN-MAN-VER$-->
		</dependency>

		<dependency>
			<groupId>com.datastax.cassandra</groupId>
			<artifactId>cassandra-driver-core</artifactId>
			<version>3.3.0</version><!--$NO-MVN-MAN-VER$ -->
		</dependency>

		<dependency>
			<groupId>com.datastax.cassandra</groupId>
			<artifactId>cassandra-driver-mapping</artifactId>
			<version>3.3.0</version><!--$NO-MVN-MAN-VER$ -->
		</dependency>

		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>1.16.20</version><!--$NO-MVN-MAN-VER$ -->
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>edu.wgu</groupId>
			<artifactId>dream-machine</artifactId>
			<version>1.6.0</version>
		</dependency>

		<dependency>
			<groupId>edu.wgu</groupId>
			<artifactId>dm-audit</artifactId>
			<version>1.0.0</version>
		</dependency>

		<dependency>
			<groupId>edu.wgu</groupId>
			<artifactId>dream-catcher-client</artifactId>
			<version>0.2.14</version>
		</dependency>

		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc7</artifactId>
			<version>12.1.0.1.0</version>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
			<version>1.5.8.RELEASE</version><!--$NO-MVN-MAN-VER$ -->
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<!-- Local profile runs Spring app using local profile which causes the 
				application-local.properties file to be used instead of application.properties 
				(specifies development SQL server instead of HSQL, etc -->
			<id>local</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.19</version>
						<configuration>
							<argLine>-Dspring.profiles.active=local</argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<!-- Development profile runs Spring app using dev profile which causes 
				the application-dev.properties file to be used instead of application.properties 
				(specifies development SQL server instead of HSQL, etc -->
			<id>dev</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.19</version>
						<configuration>
							<argLine>-Dspring.profiles.active=dev</argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>


	<build>
		<plugins>

			<!-- Plugin is used to build the fat / executable jar; this must reside 
				here w/ specification of main application class -->
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>

		</plugins>
	</build>

	<repositories>
		<repository>
			<id>WGU</id>
			<url>https://nexus.wgu.edu/content/repositories/WGU</url>
		</repository>
	</repositories>
	<version>1.2.0</version>
</project>
